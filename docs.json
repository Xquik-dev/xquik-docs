  },
  "navbar": {
    "links": [
      {
        "label": "Dashboard",
        "href": "https://xquik.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://xquik.com"
    }
  },
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Guides",
        "icon": "book",
        "description": "Get started with Xquik",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart"]
          },
          {
            "group": "Webhooks",
            "pages": [
              "webhooks/overview",
              "webhooks/verification"
            ]
          },
          {
            "group": "MCP Server",
            "pages": [
              "mcp/overview",
              "mcp/tools"
            ]
          }
        ]
      },
      {
        "dropdown": "API Reference",
        "icon": "code",
