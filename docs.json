{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Xquik",
  "description": "X (Twitter) real-time data platform â€” extraction tools, giveaway draws, account monitoring & developer API.",
  "colors": {
    "primary": "#5c3327",
    "light": "#7a4a3c",
    "dark": "#3b3836"
  },
  "fonts": {
    "family": "Outfit"
  },
  "icons": {
    "library": "lucide"
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://xquik.com"
  },
  "favicon": "/favicon.svg",
  "appearance": {
    "default": "light",
    "strict": true
  },
  "background": {
    "decoration": "gradient",
    "color": {
      "light": "#f5f3f0",
      "dark": "#1a1716"
