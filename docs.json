{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Xquik",
  "description": "X (Twitter) real-time data platform. Extraction tools, giveaway draws, account monitoring & developer API.",
  "colors": {
    "primary": "#5c3327",
    "light": "#7a4a3c",
    "dark": "#3b3836"
  },
  "fonts": {
    "family": "Outfit",
    "heading": {
      "family": "Instrument Serif"
    }
  },
  "icons": {
    "library": "lucide"
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://xquik.com"
  },
  "favicon": "/favicon.svg",
  "appearance": {
    "default": "light",
    "strict": true
  },
  "background": {
    "decoration": "gradient",
    "color": {
      "light": "#f5f3f0",
      "dark": "#1a1716"
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Dashboard",
        "href": "https://xquik.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://xquik.com"
    }
  },
  "api": {
    "mdx": {
      "server": "https://xquik.com/api/v1",
      "auth": {
        "method": "key",
        "name": "x-api-key"
      }
    },
    "playground": {
      "examples": {
        "languages": ["curl", "python", "javascript", "go"]
      }
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "API Reference",
        "icon": "square-terminal",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/overview",
              "api-reference/authentication"
            ]
          },
          {
            "group": "Account",
            "pages": [
              "api-reference/account/get",
              "api-reference/account/update"
            ]
          },
          {
            "group": "API Keys",
            "pages": [
              "api-reference/api-keys/create",
              "api-reference/api-keys/list",
              "api-reference/api-keys/revoke"
            ]
          },
          {
            "group": "Monitors",
            "pages": [
              "api-reference/monitors/create",
              "api-reference/monitors/list",
              "api-reference/monitors/get",
              "api-reference/monitors/update",
              "api-reference/monitors/delete"
            ]
          },
          {
            "group": "Events",
            "pages": [
              "api-reference/events/list",
              "api-reference/events/get"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "api-reference/webhooks/create",
              "api-reference/webhooks/list",
              "api-reference/webhooks/update",
              "api-reference/webhooks/delete",
              "api-reference/webhooks/deliveries"
            ]
          },
          {
            "group": "Draws",
            "pages": [
              "api-reference/draws/create",
              "api-reference/draws/list",
              "api-reference/draws/get",
              "api-reference/draws/export"
            ]
          },
          {
            "group": "Extractions",
            "pages": [
              "api-reference/extractions/create",
              "api-reference/extractions/list",
              "api-reference/extractions/get",
              "api-reference/extractions/export",
              "api-reference/extractions/estimate"
            ]
          },
          {
            "group": "X API",
            "pages": [
              "api-reference/x/get-tweet",
              "api-reference/x/search-tweets",
              "api-reference/x/get-user",
              "api-reference/x/check-follower"
            ]
          }
        ]
      },
      {
        "tab": "Guides",
        "icon": "book-open",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "introduction",
              "quickstart"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "guides/workflows",
              "guides/error-handling",
              "guides/rate-limits",
              "guides/webhook-testing",
              "guides/billing"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "webhooks/overview",
              "webhooks/verification"
            ]
          },
          {
            "group": "MCP Server",
            "pages": [
              "mcp/overview",
              "mcp/tools"
            ]
          },
          {
            "group": "Resources",
            "pages": [
              "guides/troubleshooting",
              "guides/types"
            ]
          }
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/xquikcom",
      "github": "https://github.com/xquik-dev"
    }
  },
  "css": "/custom.css",
  "seo": {
    "indexing": "all"
  },
  "metadata": {
    "og:site_name": "Xquik Docs",
    "og:type": "website"
  },
  "contextual": {
    "options": ["copy", "view", "claude", "chatgpt", "mcp"]
  }
}
